{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
